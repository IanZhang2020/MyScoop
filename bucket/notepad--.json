{
    "version": "2.15.0",
    "description": "一个支持windows/linux/mac的文本编辑器，目标是做中国人自己的编辑器，来自中国。",
    "homepage": "https://github.com/cxasm/notepad--",
    "license": "GPL-3.0-or-later",
    "notes": "Add Notepad-- as a context menu option by running: reg import \"$dir\\install-context.reg\"",
    "architecture": {
        "64bit": {
            "url": "https://github.com/cxasm/notepad--/releases/download/notepad-v2.15/Notepad--v2.15.0-win10-portable.zip",
            "hash": "4a6f4b1568a3765377ef3b5b64171b20da69eef7f97af8c2f50ff7936247235b",
            "extract_dir": "Notepad--v2.15.0-win10-portable"
        }
    },
    "post_install": [
        "'install-context', 'uninstall-context' | ForEach-Object {",
        "    if (Test-Path \"$bucketsdir\\MyScoop\\scripts\\notepad--\\$_.reg\") {",
        "        $notepadPath = \"$dir\\notepad--.exe\".Replace('\\', '\\\\')",
        "        $content = (Get-Content \"$bucketsdir\\MyScoop\\scripts\\notepad--\\$_.reg\").Replace('$notepad', $notepadPath)",
        "        if ($global) { $content = $content.Replace('HKEY_CURRENT_USER', 'HKEY_LOCAL_MACHINE') }",
        "        Set-Content \"$dir\\$_.reg\" $content -Encoding Ascii -Force",
        "    }",
        "}",
        "# Install Notepad-- Context Menu",
        "if ($cmd -eq 'install') {",
        "    reg import \"$dir\\install-context.reg\"",
        "}"
    ],
    "uninstaller": {
        "script": [
            "if ($cmd -eq 'uninstall') {",
            "    reg import \"$dir\\uninstall-context.reg\"",
            "}"
        ]
    },
    "bin": "notepad--.exe",
    "shortcuts": [
        [
            "notepad--.exe",
            "Notepad--"
        ]
    ],
    "persist": [
        "plugin",
        "themes"
    ],
    "checkver": {
        "github": "https://api.github.com/repositories/503592660",
        "jsonpath": "$..browser_download_url",
        "regex": "Notepad--v([\\d.]+)-win10-portable"
    },
    "autoupdate": {
        "architecture": {
            "64bit": {
                "url": "https://github.com/cxasm/notepad--/releases/download/notepad-v$majorVersion.$minorVersion/Notepad--v$version-win10-portable.zip",
                "extract_dir": "Notepad--v$version-win10-portable"
            }
        }
    }
}
